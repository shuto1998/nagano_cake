<h5>注文情報確認</h5>

<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <table class="table table-bordered">
        <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込み）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
        </thead>
        <% @total=0 %>
        <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <td><% if cart_item.item.image.attached? %>
                    <%= image_tag cart_item.item.image, size: "80x80" %>
                    <% else %>
                    <%= image_tag 'no_image', size: "80x80" %>
                    <% end %>
                    <%= cart_item.item.name %></td>
            <td><%= cart_item.item.add_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.item.add_tax_price* cart_item.amount %></td>
          </tr>
        </tbody>
        <% @total=@total+cart_item.item.add_tax_price*cart_item.amount %>
        <% end %>
      </table>
    </div>

    <div class="col-lg-4">
      <table class="table table-bordered">
          <tr><th>送料</th><td><%= @order.shipping_cost %></td></tr>
          <tr><th>商品合計</th><td><%= @total %></td></tr>
          <tr><th>請求金額</th><td><%= @total+@order.shipping_cost %></td></tr>
      </table>
    </div>

  </div>

    <table>
      <tr><th>支払い方法</th><td><%= @order.payment_method_i18n %></td></tr>
    </table>

    <table>
      <tr><th>お届け先</th><td>〒<%= @order.postal_code %> <%= @order.address %></td></tr>
      <tr><th></th><td><%= @order.name %></td></tr>
    </table>
    <%= form_with model: @order,url: orders_path,method: :post do |f| %>
    <div class="row">
      <div class="col-lg-4"></div>
      <!--入力した情報を隠して送る-->
      <!--f.hidden_fieldを使用する-->
      <!--カラム名, 送る情報-->

      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <%= f.hidden_field :postal_code, :value => @order.postal_code%>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= f.hidden_field :name, :value => @order.name %>
      <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
      <%= f.hidden_field :total_payment, :value => @total+@order.shipping_cost %>
      <%= f.hidden_field :payment_method, :value => @order.payment_method %>
      <%= f.hidden_field :status, :value => @order.status %>
      <div class="col-lg-4"><%= f.submit"注文を確定する",class: 'btn btn-success' %></div>
      <div class="col-lg-4"></div>
    </div>
    <% end %>
</div>