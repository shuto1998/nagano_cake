<h5>注文履歴詳細</h5>

<div class="container">
  <div class="row">
    <div class="col-lg-1">注文情報</div>
    <div class="col-lg-5"></div>
    <div class="col-lg-6">請求情報</div>
  </div>

  <div class="row">
    <div class="col-6">
      <table class="table table-bordered">
        <tr><th>注文日</th><td><%= @order.created_at.to_s(:datetime_jp) %></td></tr>
        <tr><th>配送先</th><td><%= @order.address %></td></tr>
        <tr><th>支払方法</th><td><%= @order.payment_method_i18n %></td></tr>
        <tr><th>ステータス</th><td><%= @order.status %></td></tr>
      </table>
    </div>
    <div class="col-lg-4">
      <table class="table table-bordered">
        <tr><th>商品合計</th><td><%= @order.total_payment-@order.shipping_cost %></td></tr>
        <tr><th>配送料</th><td><%= @order.shipping_cost %></td></tr>
        <tr><th>ご請求額</th><td><%= @order.total_payment %></td></tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-1">注文内容</div>
    <div class="col-lg-11"></div>
  </div>

  <div class="row">
    <div class="col-lg-8">
    <table class="table table-bordered">
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
      <% @order.order_details.each do |order_detail| %>
      <tr>
       <td><%= order_detail.item.name %></td>
       <td><%= order_detail.item.price %></td>
       <td><%= order_detail.amount %></td>
       <td><%= order_detail.item.add_tax_price*order_detail.amount %></td>
      </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>

