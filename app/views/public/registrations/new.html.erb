

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-10">
        <h2>新規会員登録</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        <p>名前</p>
      </div>
      <div class="col-lg-1">
        <%= f.label :（性） %>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "w-100" %>
      </div>
      <div class="col-lg-1">
        <%= f.label :（名） %>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "w-100" %>
      </div>
      <div class="col-lg-1"></div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        <p>フリガナ</p>
      </div>
      <div class="col-lg-1">
        <%= f.label :（セイ） %>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "w-100" %>
      </div>
      <div class="col-lg-1">
        <%= f.label :（メイ） %>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "w-100" %>
      </div>
      <div class="col-lg-1"></div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-lg-1">
      </div>
      <div class="col-lg-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100%",class: "vh-40" %>
      </div>
      <div class="col-lg-5">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        <%= f.label :郵便番号 %>
      </div>
      <div class="col-lg-1">
      </div>
      <div class="col-lg-3">
       <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "w-100",class: "vh-40" %>
       </div>
      <div class="col-lg-5">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        <%= f.label :住所 %>
      </div>
      <div class="col-lg-1">
      </div>
      <div class="col-lg-7">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "w-100" %>
      </div>
      <div class="col-lg-1"></div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        <%= f.label :電話番号 %>
      </div>
      <div class="col-lg-1">
      </div>
      <div class="col-lg-3">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" , class: "w-100" %>
      </div>
      <div class="col-lg-5"></div>
    </div>

     <div class="row">
      <div class="col-lg-3">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="col-lg-1"></div>
      <div class="col-lg-3">
        <%= f.password_field :password, autocomplete: "new-password", class: "w-100" %>
      </div>
      <div class="col-lg-5"></div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        <%= f.label :パスワード %>
      </div>
      <div class="col-lg-1">
      </div>
      <div class="col-lg-3">
         <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "w-100" %>
      </div>
       <div class="col-lg-5"></div>
    </div>

    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-1"></div>
      <div class="col-lg-3">
        <%= f.submit "新規登録" , class: "btn btn-success" , class: "w-100" %>
      </div>
      <div class="col-lg-5"></div>
    </div>
  </div>
  <h2>既に登録済みの方</h2>

<p><%= link_to "こちら",new_customer_session_path %>からログインしてください。</p>
<% end %>