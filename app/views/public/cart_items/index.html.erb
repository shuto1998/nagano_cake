<h5>ショッピングカート</h5>
<table class="table table-bordered">
  <thead>
  <tr>
    <th>商品名</th>
    <th>単価（税込み）</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  </thead>

  <tbody>

      <% @cart_items.each do |cart_item| %>
       <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.add_tax_price %></td>
          <td></td>
          <td><%= cart_item.item.add_tax_price* cart_item.amount %></td>
          <td><% cart_item.item.add_tax_price* cart_item.amount %></td>
        </tr>
      <% end %>

  </tbody>
</table>