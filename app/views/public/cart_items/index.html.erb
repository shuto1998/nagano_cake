<div class="container">
  <div class="row">
    <div class="col-lg-4"><h5>ショッピングカート</h5></div>
    <div class="col-lg-5"></div>
    <div class="col-lg-3"><%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に削除しますか？" %></div>
  </div>



<table class="table table-bordered">
  <thead>
  <tr>
    <th>商品名</th>
    <th>単価（税込み）</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  </thead>

  <tbody>

      <% @cart_items.each do |cart_item| %>
       <tr>
          <td><% if cart_item.item.image.attached? %>
              <%= image_tag cart_item.item.image, size: "80x80" %>
              <% else %>
              <%= image_tag 'no_image', size: "80x80" %>
              <% end %>
              <%= cart_item.item.name %></td>
          <td><%= cart_item.item.add_tax_price %></td>

          <%= form_with model: cart_item,url:cart_item_path(cart_item.id),method: :patch do |f| %>
          <td><%= f.select :amount, *[1..10] %><%= f.submit '変更' ,class: 'btn btn-success' %></td>
          <td><%= cart_item.item.add_tax_price* cart_item.amount %></td>
          <td><% cart_item.item.add_tax_price* cart_item.amount %></td>

          <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
          <% end %>
      <% end %>

  </tbody>
</table>

  <div class="row">
    <div class="col-lg-4"><%= link_to "買い物を続ける",homes_top_path, class: 'btn btn-primary' %></div>
    <div class="col-lg-5"></div>
    <div class="col-lg-3">
      <table class="table table-bordered">
        <tr>
          <th>合計金額</th>
          <td> ¥<%= @total.round.to_s(:delimited)%></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4"><%= link_to "情報入力に進む",new_order_path,class: 'btn btn-success' %> </div>
    <div class="col-lg-4"></div>
  </div>
</div>