<h5>会員情報編集</h5>

<%= form_with model: @customer,url:customers_path do |f| %>
 <div class="row">
      <div class="col-lg-3">
        <p></p>
      </div>
      <div class="col-lg-1">
        <%= f.label :（性） %>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "w-100" %>
      </div>
      <div class="col-lg-1">
        <%= f.label :（名） %>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "w-100" %>
      </div>
      <div class="col-lg-1"></div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        <p>フリガナ</p>
      </div>
      <div class="col-lg-1">
        <%= f.label :（セイ） %>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "w-100" %>
      </div>
      <div class="col-lg-1">
        <%= f.label :（メイ） %>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "w-100" %>
      </div>
      <div class="col-lg-1"></div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-lg-1">
      </div>
      <div class="col-lg-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100%",class: "vh-40" %>
      </div>
      <div class="col-lg-5">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        <%= f.label :郵便番号 %>
      </div>
      <div class="col-lg-1">
      </div>
      <div class="col-lg-3">
       <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "w-100",class: "vh-40" %>
       </div>
      <div class="col-lg-5">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        <%= f.label :住所 %>
      </div>
      <div class="col-lg-1">
      </div>
      <div class="col-lg-7">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "w-100" %>
      </div>
      <div class="col-lg-1"></div>
    </div>
    <div class="row">
      <div class="col-lg-3">
        <%= f.label :電話番号 %>
      </div>
      <div class="col-lg-1">
      </div>
      <div class="col-lg-3">
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" , class: "w-100" %>
      </div>
      <div class="col-lg-5"></div>
    </div>

     <%= f.submit '変更内容を保存' %>

    <% end %>