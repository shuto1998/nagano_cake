<h1>商品新規登録</h1>
<!-- form_with部分 -->
<%= form_with model: @Item do |f| %>

  <h4>商品画像</h4>
  
  <h4>商品名</h4>
  <%= f.text_field :name %>

  <h4>商品説明</h4>
  <%= f.text_area :introduction %>

  <h4>ジャンル</h4>
<!--%= f.select :genre_id, [[":id",":id"],[":id",":id"],[":id",":id"][":id",":id"]] %-->

  <h4>税抜価格</h4>
  <%= f.text_field :price %>

<h4>販売ステータス</h4>
 <label><%= f.radio_button :is_active, "販売中" %>販売中</label>
<label><%= f.radio_button :is_active, "販売停止中" %>販売停止中</label>


  <%= f.submit '投稿' %>
<% end %>
