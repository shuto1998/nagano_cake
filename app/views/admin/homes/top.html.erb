<h5>注文履歴一覧</h5>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <table class="table table-bordered">
        <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>

          <td><%= link_to order.created_at.to_s(:datetime_jp),admin_order_path(order.id) %></td>
          <td><%= order.name%></td>
          <% @total=0 %>
          <td><% order.order_details.each do |order_detail| %>
              <!--%= order_detail.amount %-->
          <% @total=@total+order_detail.amount %>
              <% end %>
          <%= @total %>
          </td>

          <td></td>


          </tr>
          <% end %>
        </tbody>
    </div>

  </div>
</div>
