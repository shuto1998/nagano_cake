<h1>ジャンル一覧・追加</h1>
<%= form_with model: @genre,url: admin_genres_path do |f| %>
<!--新規投稿-->
<table>
    <tr>ジャンル名</tr>
    <tr><%= f.text_field :name %></tr>
    <tr><%= f.submit '新規登録' %></tr>
</table>
<% end %>

<!--ジャンル一覧-->
<table class = "table">
<tr class="table-active"><th>ジャンル</th><td class="table-active"></td></tr>
<% @genres.each do |genre| %>
<tr><td><%= genre.name %></td><td><%= link_to "編集する",edit_admin_genre_path(genre) %></td></tr>
<% end %>
</table>
