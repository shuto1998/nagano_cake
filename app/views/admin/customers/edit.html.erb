<h5><%= @customers.last_name %><%= @customers.first_name %>さんの会員情報編集</h5>


<div class="container">
  <div class="row">
    <div class="col-lg-2">会員ID</div>
    <div class="col-lg-7"><%= @customers.id %></div>
    <div class="col-lg-3"></div>
  </div>
<%= form_with model:@customers,url:admin_customer_path do |f| %>
   <div class="row">
    <div class="col-lg-3">氏名</div>
    <div class="col-lg-3"><%= f.text_field:last_name %></div>
    <div class="col-lg-3"><%= f.text_field:first_name %></div>
    <div class="col-lg-3"></div>
  </div>

  <div class="row">
    <div class="col-lg-3">フリガナ</div>
    <div class="col-lg-3"><%= f.text_field:last_name_kana %></div>
    <div class="col-lg-3"><%= f.text_field:first_name_kana %></div>
    <div class="col-lg-3"></div>
  </div>

  <div class="row">
    <div class="col-lg-3">郵便番号</div>
    <div class="col-lg-3"><%= f.text_field:postal_code %></div>
    <div class="col-lg-3"></div>
    <div class="col-lg-3"></div>
  </div>

  <div class="row">
    <div class="col-lg-3">住所</div>
    <div class="col-lg-3"><%= f.text_field:address %></div>
    <div class="col-lg-3"></div>
    <div class="col-lg-3"></div>
  </div>

  <div class="row">
    <div class="col-lg-3">電話番号</div>
    <div class="col-lg-3"><%= f.text_field:telephone_number %></div>
    <div class="col-lg-3"></div>
    <div class="col-lg-3"></div>
  </div>

  <div class="row">
    <div class="col-lg-3">メールアドレス</div>
    <div class="col-lg-3"><%= f.text_field:email %></div>
    <div class="col-lg-3"></div>
    <div class="col-lg-3"></div>
  </div>

   <div class="row">
    <div class="col-lg-3">会員ステータス</div>
    <div class="col-lg-1"><%= f.radio_button :is_deleted, false %>有効</div>
    <div class="col-lg-1"><%= f.radio_button :is_deleted, true  %>退会</div>
    <div class="col-lg-3"></div>
    <div class="col-lg-4"></div>
  </div>

   <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-3"><%= f.submit'変更を保存' %></div>
    <div class="col-lg-3"></div>
    <div class="col-lg-3"></div>
  </div>


  </div>


<% end %>